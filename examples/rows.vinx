draw $c square at $p = {
    $p2 = (0,0);
    set $p2 to $p;
    $s = 20;
    move $p2 right by $s;
    move $p2 down by $s;
    draw $c rectangle from $p to $p2;
}
draw [$c] square at [$p*] = draw $c square at $p;
draw [$c] square at [$p*] = draw $c square at $p;

"draw"
every frame {
    draw [[red,green],[blue,purple]] square at $rows;
}

move [$p] $d by $s = move $p $d by $s;
move [$p] [$d] by [$s] = move $p $d by $s;

"move"
every frame {
    move $rows [right,left] by [$v,2,3];
}

every 10 frames {
    add 2 to $v;
}
